<%= form_for @course do |f| %>
<div>
<%= f.label :name%>
<%= f.text_field :name%>
<br/>
<%= f.label :img%>
<%= f.file_field  :img%>
<br/>
<%= f.label :short_description %>
<%= f.text_field :short_description %>
<br/>
<%= f.label :long_description %>
<%= f.text_field :long_description %>
<br/>
<%= f.label :duration %>
<%= f.text_field :duration %>
<br/>
<%= f.submit %>
</div>
<% end %>