<div class="d-flex align-items-center flex-column  "  style="background-image: url('<%= @program.img %>'); background-repeat: no-repeat;background-size: cover; width: 100%;height: 500px;">
<section class="text-center">
  <br>
    <h1 class="text-white "> <%= @program.name %></h1>
  <img src="<%= @program.icon %>">
    <p class="lead  text-white"><%= @program.long_description %></p>
    <div class="mt-auto p-2">
      <div class="row text-white">
        <div class="col">* Students 220</div>
        <div class="col">* Projects 500</div>
        <div class="w-100"></div>
        <div class="col">* 12 Weeks</div>
        <div class="col">* 7 Course</div>
      </div>
    </div>

</section>
</div>

<% if user_signed_in? %>
 <% if current_user.admin %>
  <%= link_to 'Edit', edit_program_path %>
  <%= link_to 'Delete', program_path , method: :delete %>
    <% end %>
<% else %>
<% end %>

<hr/>
<% if user_signed_in? %>
  <% if current_user.admin %>
    <nav>
      <%= link_to 'Add New Course', new_course_path %>
    </nav>
  <% end %>
<% else %>
<% end %>
<h1 style="text-align:center">Courses</h1>


<div class="album py-5 bg-light">
<div class="container">
<div class="row">
<div class="card-deck">
  <% @program.courses.each do |course| %>
    
      
<div class="card mb-4 shadow-sm">
<img src="<%= course.img %>" class="img-fluid " style="height: 200px;">
<div class="card-body">
<h4><%= course.name %></h4>
<p class="card-text"><%= course.short_description %></p>
</div>
<div class="card-footer">
<div class="d-flex justify-content-between align-items-center">
<div class="btn-group ">
<a href="<%= course_path(course) %>">
<button type="button" class="btn btn-sm btn-outline-secondary">View</button>
</a>


</div>
</div>
</div>
<!--<small class="text-muted">9 mins</small>-->
</div>
 <!--    </div>-->
  <% end %>
</div>
</div>
</div>
</div>